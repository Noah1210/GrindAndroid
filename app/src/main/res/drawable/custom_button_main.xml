<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/darker_gray" />
            <corners android:radius="5dp"></corners>
            <stroke android:width="5px" android:color="@color/gray" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/red" />
            <corners android:radius="5dp"></corners>
            <stroke android:width="6px" android:color="@color/light_gray" />
        </shape>
    </item>

    <item android:state_enabled="false" android:color="@color/light_gray">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="5dp"></corners>
            <stroke android:width="6px" android:color="@color/light_gray" />
        </shape>
    </item>
</selector>
